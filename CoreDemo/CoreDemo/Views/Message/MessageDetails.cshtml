@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detayı</h1>

    @Html.Label("Mesaj Id")
    @Html.TextBoxFor(x=>x.MessageID,new {
        @class="form-control", @disabled = "disabled"
    })
    <br />
    @Html.Label("Mesaj Konusu")
    @Html.TextBoxFor(x=>x.Subject,new {
        @class="form-control" , @disabled = "disabled"
    })
     <br />
     @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x=>x.MessageDetails,20,30,new {
        @class="form-control" , @disabled = "disabled"
    })
     <br />
  
   
   
   
   
  
   <button class="btn btn-success"><a href="/Message/Inbox/">Mesajlara Dön</a></button>

